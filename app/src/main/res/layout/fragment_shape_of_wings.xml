<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".IdFragment.ShapeOfWingsFragment">

    <TextView
        android:id="@+id/shapeOfWingsFragment"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="648dp"
        android:text="Shape of Wings"
        android:textColor="#306CB5"
        android:textSize="40sp"
        android:textStyle="italic|bold" />

    <ImageButton
        android:id="@+id/rigidWingsButton"
        android:layout_width="166dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="354dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkwings_rigid" />

    <ImageButton
        android:id="@+id/roofLikeWingsButton"
        android:layout_width="128dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="244dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="352dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkwings_rooflike" />

    <ImageButton
        android:id="@+id/barkLiceButton"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="426dp"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="163dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkbarklice" />

    <ImageButton
        android:id="@+id/differentWingsButton"
        android:layout_width="168dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="421dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="148dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkwings_different" />

</RelativeLayout>