<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".IdFragment.BodySegmentsFragment">

    <TextView
        android:id="@+id/numberOfWingsFragment"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="661dp"
        android:text="Body Segments"
        android:textColor="#306CB5"
        android:textSize="40sp"
        android:textStyle="italic|bold" />

    <ImageButton
        android:id="@+id/twoSegmentsButton"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="392dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkspiders" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="132dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkcentipede"
        android:visibility="visible" />

</RelativeLayout>