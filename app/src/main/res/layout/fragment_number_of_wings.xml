<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".IdFragment.NumberOfWingsFragment">

    <TextView
        android:id="@+id/numberOfWingsFragment"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="626dp"
        android:text="Number of Wings"
        android:textColor="#306CB5"
        android:textSize="40sp"
        android:textStyle="italic|bold" />

    <ImageButton
        android:id="@+id/noWingsButton"
        android:layout_width="119dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="373dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkharvestmen" />

    <ImageButton
        android:id="@+id/onePairWingsButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="375dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkwings_onepair" />

    <ImageButton
        android:id="@+id/twoPairWingsButton"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="148dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dkwings_different" />


</RelativeLayout>