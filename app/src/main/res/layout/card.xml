<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="1dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:focusable="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recycler1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/recycler_1_title_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            card_view:layout_constraintStart_toEndOf="@+id/recycler1ImageView"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler1TextView_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/textview"
            android:textColor="@color/grey_c1c1"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/recycler1TextView"
            card_view:layout_constraintTop_toBottomOf="@+id/recycler1TextView" />

        <ImageView
            android:id="@+id/recycler1ImageView"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>